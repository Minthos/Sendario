tar -xvf swift-5.8.1-RELEASE-ubuntu22.04.tar.gz
cp -r swift-5.8.1-RELEASE-ubuntu22.04/usr/* ~/.local/
rm -r swift-5.8.1-RELEASE-ubuntu22.04/usr/
cd -

